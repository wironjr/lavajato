<style>

.login-box .user-box {
  position: relative;
}

.login-box .user-box input {
  width: 100%;
  padding: 10px 0;
  font-size: 16px;
  color: #000;
  margin-bottom: 30px;
  border: none;
  border-bottom: 1px solid #000;
  outline: none;
  background: transparent;
}
.login-box .user-box label {
  position: absolute;
  top:0;
  left: 0;
  padding: 10px 0;
  font-size: 16px;
  color: #000;
  pointer-events: none;
  transition: .5s;
}

.login-box .user-box input:focus ~ label,
.login-box .user-box input:valid ~ label {
  top: -20px;
  left: 0;
  color: #000;
  font-size: 12px;
}


</style>


<div class="d-flex w-100 vh-100 " >
	<div class="d-flex align-items-center m-auto" >
		<div class=" mt-3 card shadow-lg text-bg-light p-1 card-login" style="width: 20rem; Height: 20rem">
			<div class="text-center mb-4 shadow">
				<%= image_tag("logocleanner.png", width: 200, class:'p-2 bg-primary p-1 position-absolute top-0 start-50 translate-middle', style:'border-radius: 5px;') %>
			</div>

			<%= form_for :session, url: entrar_path, method: :post do |form| %>
			<div class="login-box mt-4 p-2">

			  <div class="user-box">
					<input class="form-control text-uppercase" style="" type="text" name="session[nome]" required="" autocomplete="nope" id="session_login"/>
					<%= form.label :nome, 'Usuário', class:'form-label', style:'font-size: 0.8rem' %>
				</div>

				
				<div class=" user-box " >
					<input class="form-control text-uppercase" style="" type="password" name="session[password]" required="" id="session_password" autocomplete="nope"/> 
					<%= form.label :password, 'Senha', class:'form-label', style:'font-size: 0.8rem' %>
				</div>
				<div class="p-2 " style="margin-top: -30px !important">
					<input type="checkbox" id="mostrar-senha" >
					<label for="mostrar-senha" style="font-size: 0.7rem; " class="">Mostar senha</label>
				</div>
						

				<div class="p-2 mt-2">
						<%= form.submit 'Entrar', class:'btn btn-primary shadow w-100' %>
						
					<div class="text-center mt-1" style="font-size: 0.5rem">Caso não tenha usuário cadastrado, contate o suporte.</div>
				</div>
			</div>

			<% end %>

		</div>
	</div>
</div>


<script>
var input = document.querySelector('#session_password');
var img = document.querySelector('#mostrar-senha');
img.addEventListener('click', function () {
	input.type = input.type == 'text' ? 'password' : 'text';
});

$('.card-login').hide()
$( document ).ready(function() { /// remover auto complete de senha do chrome
	$('.card-login').toggle( "puff" ); // animação
	$( "#session_login" ).attr('readonly', true);
	$( "#session_login" ).on("click", function(){
		$( "#session_login" ).attr('readonly', false);
	}
	)
});


</script>