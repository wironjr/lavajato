


<div class="d-flex w-100 vh-100" >
	<div class="d-flex align-items-center m-auto" >
		<div class=" mt-3 card shadow-lg text-bg-light p-1" style="width: 20rem; Height: 20rem">
			<div class="text-center mb-4 shadow">
				<%= image_tag("logocleanner.png", width: 200, class:'p-2 bg-primary p-1 position-absolute top-0 start-50 translate-middle', style:'border-radius: 5px;') %>
			</div>

			<%= form_for :session, url: entrar_path, method: :post do |form| %>
				<div class="p-2" >
					<div class="">
						<%= form.label :nome, 'Usuário', class:'form-label', style:'font-size: 0.8rem' %>
						<%= form.text_field :nome, class:'form-control text-uppercase', style:'border-radius: 5px;' %>
					</div>
				</div>

				<div class="p-2">
						<%= form.label :password, 'Senha', class:'form-label', style:'font-size: 0.8rem' %>
						<%= form.password_field :password,  class:'form-control', style:'border-radius: 5px' %>
						
						<div class="mt-1 p-2">
							<input type="checkbox" id="mostrar-senha" >
							<label for="mostrar-senha" style="font-size: 0.7rem; " class="">Mostar senha</label>
						</div>
				</div>

				<div class="p-2 mb-2">
						<%= form.submit 'Entrar', class:'btn btn-primary shadow w-100' %>
						<% image_tag("logocleanner.png", width: 120, class:'float-end bg-primary p-1 shadow ', style:'border-radius: 5px') %>
				</div>

			<% end %>

			<span class="text-center" style="font-size: 0.5rem">Caso não tenha usuário cadastrado, contate o suporte.</span>
		</div>
	</div>
</div>


<script>
var input = document.querySelector('#session_password');
var img = document.querySelector('#mostrar-senha');
img.addEventListener('click', function () {
  input.type = input.type == 'text' ? 'password' : 'text';
});
</script>