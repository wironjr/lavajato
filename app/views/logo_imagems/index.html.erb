<h1>Logotipo</h1>

<% if @logo_imagems.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>Imagem</th>
        <th>Empresa</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @logo_imagems.each do |logo_imagem| %>
        <tr>
        <td>
          <%= image_tag(logo_imagem.imagem, width: 100) if logo_imagem.imagem.present?%>
        </td>
        <td>
          <%= logo_imagem.nome.upcase %>
        </td>
          <td>
            <%= link_to '', edit_logo_imagem_path(logo_imagem), class:'btn btn-primary rounded-pill bi bi-pencil-square text-white fs-6'  %>
            <%= link_to '', logo_imagem, method: :delete, class: 'btn btn-danger rounded-pill bi bi-trash3-fill', data: { confirm: 'Apagar?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="mt-3">
    Não tem nenhum logotipo cadastrado no sistema.<br>
    <%= link_to ' Adicionar', new_logo_imagem_path, class:'btn btn-primary bi-plus-circle shadow btn-tremer mt-2', style:'width: 9rem; height: auto !important; font-size: 1.3rem' %>
  </div>
<% end %>

<br>

