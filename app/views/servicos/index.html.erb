<h1>Serviços</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Data/Hora</th>
        <th>Cliente</th>
        <th>Serviço</th>
        <th>Valor</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @servicos.each do |servico| %>
        <tr>
          <td><%= servico.data.strftime('%d/%m/%Y %H:%M') %></td>
          <td><%= servico.cliente %></td>
          <td><%= servico.servico %></td>
          <td><%= servico.valor %></td>
          <td>
            <%#= link_to 'Show', servico %>
            <%= link_to '', edit_servico_path(servico), class:'btn btn-primary rounded-pill bi bi-pencil-square text-white fs-6'  %>
            <%= link_to '', servico, method: :delete, class: 'btn btn-primary rounded-pill bi bi-trash3-fill', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

