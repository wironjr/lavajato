<%= form_with(model: servico) do |form| %>

<div class="flash-msg hide"><%= render 'layouts/error_messages', object: form.object %></div>

  <div class="form-group mb-2">
    <%= form.label :data %>
    <%= form.datetime_local_field :data, value: Time.now.strftime('%Y-%m-%dT%H:%M'), class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= form.label :cliente %>
    <%= form.text_field :cliente, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= form.label :servico, 'ServiÃ§o' %>
    <%= form.text_field :servico, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= form.label :valor %>
    <%= form.text_field :valor, value: params[:action] == 'edit' ? numero_real(@servico.valor,2) : '', class: "form-control moeda" %>
  </div>
  <div class="form-group mb-2">
    <%= form.label :caixa %>
    <%= form.text_field :caixa, class: "form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= form.label :pago %>
    <%= form.check_box :pago, class: "form-check-input" %>
  </div>
  <div class="form-group mt-4">
    <%= form.submit "Salvar", class: "btn btn-primary me-2" %>
    <%= link_to "Voltar", servicos_path, class: "btn btn-primary active" %>
  </div>
  
  
<% end %>

 <script>
  $(document).ready(function(){
    $('.moeda').maskMoney({
      prefix: 'R$ ',
      decimal: ',',
      thousands: '.'
    });
  });
  </script>